# .env.example - 复制此文件为 .env 并填写配置

# === 数据库连接信息 ===
DB_HOST="127.0.0.1"
DB_PORT="5432"
DB_NAME="ai_prod"
DB_USER="postgres"
DB_PASS="password_here"

# === 备份参数 ===
# 备份文件存放目录
BACKUP_DIR="/opt/pg_backup/ai_prod"
# 本地保留天数（S3 上保留时间请在 AWS 控制台配置 Lifecycle）
RETENTION_DAYS=3

# === S3 上传配置 ===
# AWS S3 存储桶名称
S3_BUCKET="prod-pgsql-backup"
# 桶内路径前缀（不要以 / 结尾）
S3_PREFIX="ai-prod"
# 存储类型 (STANDARD, STANDARD_IA, GLACIER, etc.)
S3_STORAGE_CLASS="STANDARD_IA"
